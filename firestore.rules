rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Эта коллекция содержит все видео, но не предназначена для публичного листинга.
    match /videoFragments/{videoId} {
      allow get: if true;
      allow list: if false; // Явно запрещаем листинг
      allow write: if isAdmin();
    }

    // Эта коллекция предназначена для публичного отображения и доступна всем.
    match /publicVideoFragments/{videoId} {
      allow get: if true;
      allow list: if true; // Разрешаем чтение и листинг всем
      allow write: if isAdmin(); // Только админы могут сюда писать
    }

    // Здесь хранятся видео, ожидающие модерации.
    match /pendingVideoFragments/{videoId} {
      allow read, update, delete: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.uploaderId == request.auth.uid;
      allow list: if isAdmin();
    }

    // Коллекция для определения ролей администраторов.
    match /roles_admin/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; 
      allow create, delete: if isAdmin();
      allow update: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}
